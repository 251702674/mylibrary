<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">

    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryDark">@color/blue_900</item>
        <item name="colorAccent">@color/blue_700</item>
        <item name="colorControlNormal">@color/blue_700</item>
    </style>

    <!-- toolbar 主题 -->
    <style name="Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryDark">@color/blue_900</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

    </style>

    <!-- 选项卡 主题 -->
    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="colorAccent">@color/blue_700</item>
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryDark">@color/blue_900</item>
        <item name="colorControlNormal">@color/blue_700</item>
        <item name="android:textColorPrimary">@color/blue_700</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

    </style>

    <!-- Dialog 主题 -->
    <style name="LoadingDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryDark">@color/blue_900</item>
        <item name="colorAccent">@color/blue_700</item>
        <item name="colorControlNormal">@color/blue_700</item>
    </style>

